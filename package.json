{
  "name": "windows-window-controller",
  "author": "waiting",
  "version": "3.2.0",
  "description": "controll window by calling user32.ShowWindow from node via node-ffi",
  "keywords": [
    "window",
    "windows api",
    "ShowWindow",
    "show window",
    "hide window",
    "maximize window",
    "minimize window",
    "隐藏窗口"
  ],
  "engines": {
    "node": ">=8.10.0"
  },
  "browser": "",
  "es2015": "./dist/index.esm.js",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nwwc": "./dist/bin/nwwc.js",
    "show-window": "./dist/bin/show-window.js",
    "hide-window": "./dist/bin/hide-window.js",
    "kill-window": "./dist/bin/kill-window.js"
  },
  "bugs": {
    "url": "https://github.com/waitingsong/node-windows-window-controller/issues"
  },
  "homepage": "https://github.com/waitingsong/node-windows-window-controller#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/node-windows-window-controller.git"
  },
  "license": "MIT",
  "nyc": {
    "exclude": [
      "**/*.js",
      "**/*.test.ts",
      "**/*.d.ts",
      "test",
      "dist",
      "src/bin"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "os": [
    "win32"
  ],
  "dependencies": {
    "ffi": "^2.2.0",
    "ref": "^1.3.5",
    "win32-api": "^3.0.1",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "@types/ffi": "^0.0.19",
    "@types/mocha": "^5.2.2",
    "@types/node": "^10.3.2",
    "@types/power-assert": "^1.5.0",
    "@types/ref": "^0.0.28",
    "@types/ref-struct": "^0.0.28",
    "@types/rewire": "^2.5.28",
    "@types/rimraf": "^2.0.2",
    "@types/yargs": "^11.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "intelli-espower-loader": "^1.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mz-modules": "^2.1.0",
    "nyc": "^12.0.2",
    "power-assert": "^1.5.0",
    "rewire": "^4.0.0",
    "rimraf": "^2.6.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^3.0.0",
    "rxjs": "^6.2.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.1",
    "yargs": "^11.1.0"
  },
  "scripts": {
    "bp:add": "git remote add bp https://github.com/waitingsong/npm-base",
    "bp:sync": "git fetch bp && git pull --no-edit bp master",
    "build": "npm run clean && npm run lint && npm run lint:t && npm run tsc && npm run jslint && npm run rp",
    "clean": "rm -rf dist/*",
    "cov": "nyc mocha",
    "cov:coveralls": "nyc mocha && nyc report --reporter=text-lcov | coveralls",
    "jslint": "eslint --fix dist/**/*.js",
    "lint": "tslint --fix -p tsconfig.json -t stylish",
    "lint:t": "tslint --fix -p test/tsconfig.json -t stylish",
    "prepublishOnly": "npm run build",
    "repo:init": "git config --local push.followTags true && git config --local core.hooksPath ./.githooks && git config --local remote.origin.prune true && git config --local remote.origin.tagopt \"--tags\" && git config --local remote.pushdefault origin && echo It may going for a long time. Plese wait... && npm i && ts-node -P .githooks/tsconfig.json .githooks/init.ts",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "mocha --opts test/mocha.opts",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  }
}
